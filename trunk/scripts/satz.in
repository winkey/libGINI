gini="$1"
tiff="/tmp/${1}.${2}.${3}.${4}.${5}km.tiff"
warp="@wwwdisk@/satmapserver/${1}.${2}.${3}.${4}.${5}km.warped.tiff"

srs="+proj=latlong +datum=WGS84"

if [[ -f "$tiff" ]]
then
	rm "$tiff"
fi

if [[ -f "$warp" ]]
then
	rm "$warp"
fi

GINI2gdal -t 95 -g "$gini" -o "$tiff"

gdalwarp -dstnodata 0 -co TILED=YES -co TFW=YES -t_srs "$srs" "$tiff" "$warp"

if [[ -f "$tiff" ]]
then
	rm "$tiff"
fi


